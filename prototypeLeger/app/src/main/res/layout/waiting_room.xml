<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".activities.WaitingRoomActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeu du Scrabble - Ã‰quipe 107"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salle de jeu n*"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:id="@+id/roomId" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Il manque ... joueurs pour commencer la partie.."
        app:layout_constraintTop_toBottomOf="@id/roomId"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="50dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:id="@+id/player_missing" />


    <ProgressBar
        android:id="@+id/progress_Bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/player_missing"
        android:layout_marginTop="150dp"
        android:indeterminate = "true"
        android:max="100"
        android:layout_centerInParent="true"
        android:progress="0" />


</androidx.constraintlayout.widget.ConstraintLayout>
