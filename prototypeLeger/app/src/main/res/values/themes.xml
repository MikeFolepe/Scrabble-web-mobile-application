<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScrabblePrototype" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/teal</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="textColorThird">@color/teal_700</item>  //btn to upload avatar
        <item name="backgroundColor">@color/light_green</item>
        <item name="backgroundTextColor">@color/dark_green</item>
        <item name="containerColor">@color/white</item>
        <item name="containerBorderColor">@color/light_gray</item>
        <!-- Customize your theme here. -->
        <item name="buttonBarPositiveButtonStyle">@color/green</item>
        <item name="buttonBarNegativeButtonStyle">@color/red</item>
        <item name="itemTextColor">@color/teal_200</item> // Reserve in info_pannel
        <item name="dividerColor">@color/dark_gray</item>
        <item name="mainDividerColor">@color/black</item>
        <item name="titleTextColor">@color/dark_gray</item>   // fields title in user profile
        <item name="progressBarStyle">@color/teal</item>
        <item name="sideNavBarStart">@color/gradient_start</item>
        <item name="sideNavBarCenter">@color/gradient_center</item>
        <item name="sideNavBarEnd">@color/gradient_end</item>
        <item name="profileField">@color/white_gray</item>
        <item name="profileFieldOutline">@color/light_gray</item>

        <item name="buttonBarNeutralButtonStyle">@color/navy_blue</item>
        <item name="buttonNeutralShadow">@color/dark_navy_blue</item>
        <item name="buttonStyle">@color/teal</item>
        <item name="buttonShadow">@color/dark_teal</item>
        <item name="buttonNegativeShadow">@color/dark_red</item>
        <item name="floatButtonColor">@color/teal_200</item>

        <item name="borderColor">@color/black</item>
        <item name="borderColorSecondary">@color/white</item>

        <item name="appBarLayoutStyle">@color/teal</item>

        <item name="spinnerArrowColor">@color/black</item>

        <item name="messageInfoColor">@color/gray</item>
        <item name="sendMessageBtnColor">@color/light_green</item>

    </style>

    <style name="Theme.ScrabblePrototype.Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/teal_200</item>
        <item name="textColorThird">@color/teal_700</item>  //btn to upload avatar
        <item name="android:textColorSecondary">@color/white</item>
        <item name="backgroundColor">@color/darker_gray</item>
        <item name="backgroundTextColor">@color/dark_gray</item>
        <item name="containerColor">@color/container_gray</item>
        <item name="containerBorderColor">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="buttonBarPositiveButtonStyle">@color/green</item>
        <item name="buttonBarNegativeButtonStyle">@color/red</item>
        <item name="itemTextColor">@color/teal_200</item> // Reserve in info_pannel
        <item name="dividerColor">@color/gray</item>
        <item name="mainDividerColor">@color/white</item>
        <item name="titleTextColor">@color/light_gray</item>   // fields title in user profile
        <item name="progressBarStyle">@color/teal_200</item>
        <item name="sideNavBarStart">@color/gradient_start</item>
        <item name="sideNavBarCenter">@color/gradient_center</item>
        <item name="sideNavBarEnd">@color/gradient_end</item>
        <item name="profileField">@color/container_gray</item>
        <item name="profileFieldOutline">@color/black</item>

        <item name="buttonBarNeutralButtonStyle">@color/navy_blue</item>
        <item name="buttonNeutralShadow">@color/dark_navy_blue</item>
        <item name="buttonStyle">@color/teal</item>
        <item name="buttonShadow">@color/dark_teal</item>
        <item name="buttonNegativeShadow">@color/dark_red</item>
        <item name="floatButtonColor">@color/teal_200</item>

        <item name="borderColor">@color/white</item>
        <item name="borderColorSecondary">@color/black</item>

        <item name="appBarLayoutStyle">@color/teal</item>

        <item name="spinnerArrowColor">@color/white</item>

        <item name="messageInfoColor">@color/light_gray</item>
        <item name="sendMessageBtnColor">@color/teal_200</item>
    </style>

    <style name="Theme.ScrabblePrototype.Blue" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/light_green</item>
    </style>

    <style name="Theme.ScrabblePrototype.Orange" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/light_green</item>
    </style>

    <style name="Theme.ScrabblePrototype.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
