<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScrabblePrototype" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/teal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="textPrimary">@color/teal</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="textColorThird">@color/teal_700</item>  //btn to upload avatar
        <item name="backgroundColor">@color/light_green</item>
        <item name="backgroundTextColor">@color/dark_green</item>
        <item name="containerColor">@color/white</item>
        <item name="containerBorderColor">@color/light_gray</item>
        <item name="roomItemBackgroundColor">@color/teal</item>
        <!-- Customize your theme here. -->
        <item name="buttonBarPositiveButtonStyle">@color/green</item>
        <item name="buttonBarNegativeButtonStyle">@color/red</item>
        <item name="itemTextColor">@color/teal_200</item> // Reserve in info_pannel
        <item name="dividerColor">@color/dark_gray</item>
        <item name="mainDividerColor">@color/black</item>
        <item name="titleTextColor">@color/dark_gray</item>   // fields title in user profile
        <item name="progressBarStyle">@color/teal</item>

        <item name="sideNavBarStart">@color/teal_gradient_start</item>
        <item name="sideNavBarCenter">@color/teal_gradient_center</item>
        <item name="sideNavBarEnd">@color/teal_gradient_end</item>

        <item name="profileField">@color/white_gray</item>
        <item name="profileFieldOutline">@color/light_gray</item>
        <item name="android:navigationBarColor">@color/teal_700</item>

        <item name="buttonBarNeutralButtonStyle">@color/navy_blue</item>
        <item name="buttonNeutralShadow">@color/dark_navy_blue</item>
        <item name="buttonStyle">@color/teal</item>
        <item name="buttonShadow">@color/dark_teal</item>
        <item name="buttonNegativeShadow">@color/dark_red</item>
        <item name="floatButtonColor">@color/teal_200</item>
        <item name="floatAcceptDecline">@color/white</item>

        <item name="borderColor">@color/black</item>
        <item name="borderColorSecondary">@color/white</item>
        <item name="lightBorderColor">@color/white</item>

        <item name="appBarLayoutStyle">@color/teal</item>
        <item name="appBarTitleColor">@color/white</item>


        <item name="spinnerArrowColor">@color/black</item>

        <item name="messageInfoColor">@color/light_gray</item>
        <item name="sendMessageBtnColor">@color/light_green</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="statusBarBackground">@color/teal</item>
    </style>

    <style name="Theme.DefaultAlert" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
